#!/bin/csh -f
# Render images for a PCB
setenv BASE "$1:r"
setenv TMP `mktemp /tmp/XXXXXXXXXXX.kicad_pcb`
$0:h/clean "$BASE.kicad_pcb" "$TMP"
/Applications/KiCad/KiCad.app/Contents/MacOS/kicad-cli pcb render -o "$TMP" "$BASE.png" --perspective --rotate ' -40,0,30' --zoom=0.85 --floor --pan ' -0.9,2.3,0' --width=2300 --height=1900 --background=opaque
